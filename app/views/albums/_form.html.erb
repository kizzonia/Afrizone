<%= simple_form_for(@genre, @album, html: { class: 'form-horizontal' } )do |f| %>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= f.input :name %>
        <%= f.input :notes %>
        <%= f.input :history %>
        <%= f.input :artist %>
        <%= f.input :year %>
        <%= form.input :thumbnail, as: :file %>
        <%= f.collection_select :genre_id, Genre.all, :id, :type, {prompt: "Choose a Genre "} %>
        <%= f.submit :submit, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>
