<%= simple_form_for(@blog) do |f| %>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
  <%= f.error_notification %>


    <%= f.input :title %>
    <%= f.input :sub_title, :as => :ckeditor, :input_html=> {:ckeditor => {:toolbar => "Full"}}, :rows => 16, :cols => 16  %>
    <%= f.input :body, :as => :ckeditor, :input_html=> {:ckeditor => {:toolbar => "Full"}}, :rows => 16, :cols => 16  %>
    <%= f.input :thumbnail, as: :file %>


  <div class="form-actions">
    <%= f.submit :submit, class: "btn btn-default" %>
  </div>
<% end %>
